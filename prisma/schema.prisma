generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Locales {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  image           String
  slogan          String
  created_at      DateTime          @default(now())
  x               Float
  y               Float
  horario         String?
  direccion       String?
  contacto        String?
  products_locals products_locals[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model productos {
  id              BigInt            @id @default(autoincrement())
  created_at      DateTime          @default(now()) @db.Timestamptz(6)
  name            String            @unique
  description     String?
  brand           String?
  products_locals products_locals[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model products_locals {
  id            BigInt    @id @default(autoincrement())
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  price         Float
  stock         BigInt
  disponibility Boolean   @default(false)
  product_id    BigInt
  local_id      Int
  Locales       Locales   @relation(fields: [local_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  productos     productos @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
