generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Locales {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  image           String
  slogan          String
  created_at      DateTime          @default(now())
  x               Float
  y               Float
  horario         String?
  direccion       String?
  contacto        String?
  products_locals Products_locals[]
}

model Productos {
  id              BigInt            @id @default(autoincrement())
  created_at      DateTime          @default(now())
  name            String            @unique
  description     String?
  brand           String?
  products_locals Products_locals[]
  image           String            @default("")
}

model Products_locals {
  id            BigInt    @id @default(autoincrement())
  created_at    DateTime  @default(now())
  price         Float
  stock         BigInt
  disponibility Boolean   @default(false)
  product_id    BigInt
  local_id      Int
  Locales       Locales   @relation(fields: [local_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  productos     Productos @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
